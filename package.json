{
  "name": "pipermail",
  "version": "5.0.1",
  "description":
    "node.js utilities for reading pipermail archives such as es-discuss",
  "main": "./lib/index.js",
  "types": "./lib/index.d.ts",
  "files": ["lib/"],
  "dependencies": {
    "@types/ent": "^2.2.1",
    "@types/htmlparser2": "^3.7.31",
    "@types/node": "^10.0.3",
    "barrage": "^2.0.3",
    "ent": "https://github.com/esdiscuss/ent/archive/fixed.tar.gz",
    "htmlparser2": "~3.9.2",
    "promise": "~8.0.0",
    "then-request": "^6.0.0"
  },
  "devDependencies": {
    "@types/jest": "*",
    "husky": "*",
    "jest": "*",
    "lint-staged": "*",
    "prettier": "*",
    "ts-jest": "25.0.0",
    "typescript": "*"
  },
  "scripts": {
    "precommit": "lint-staged",
    "prepublish": "npm run build",
    "prettier": "prettier --write \"src/**/*.{ts,tsx}\"",
    "prettier:check": "prettier --list-different \"src/**/*.{ts,tsx}\"",
    "build": "tsc",
    "test": "jest ./src --coverage",
    "watch": "jest ./src --coverage --watch"
  },
  "lint-staged": {
    "*.{ts,tsx}": ["prettier --write", "git add"]
  },
  "jest": {
    "testEnvironment": "node",
    "moduleFileExtensions": ["ts", "tsx", "js"],
    "transform": {
      "\\.(ts|tsx)$": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "testMatch": ["**/*.test.(ts|tsx|js)"]
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/esdiscuss/pipermail.git"
  },
  "author": "ForbesLindesay",
  "license": "MIT"
}